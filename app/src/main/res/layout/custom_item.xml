<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_details_layout.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/symbolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symbol:" />

    <TextView
        android:id="@+id/identifierTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifier:" />

    <TextView
        android:id="@+id/openTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open:" />

    <TextView
        android:id="@+id/dayHighTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day High:" />

    <TextView
        android:id="@+id/dayLowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Low:" />

    <TextView
        android:id="@+id/lastPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Price:" />

    <TextView
        android:id="@+id/previousCloseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Close:" />

    <TextView
        android:id="@+id/changeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change:" />

    <TextView
        android:id="@+id/pChangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P Change:" />

    <TextView
        android:id="@+id/yearHighTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year High:" />

    <TextView
        android:id="@+id/yearLowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Low:" />

    <TextView
        android:id="@+id/totalTradedVolumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Traded Volume:" />

    <TextView
        android:id="@+id/totalTradedValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Traded Value:" />

    <TextView
        android:id="@+id/perChange365dTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Change (365d):" />

    <TextView
        android:id="@+id/perChange30dTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Change (30d):" />

</LinearLayout>
